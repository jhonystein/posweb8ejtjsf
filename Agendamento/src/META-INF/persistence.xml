<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="agendamento">
		<class>modelo.Usuario</class>
		<class>modelo.Sala</class>
		<class>modelo.Reserva</class>
		<class>modelo.Projetor</class>
		<properties>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password" value="root" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost/agendamento" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.connection.autocommit" value="true"/>
			<property name="hibernate.hbm2dll.auto" value="create"/>
		</properties>
		
		
	</persistence-unit>

</persistence>